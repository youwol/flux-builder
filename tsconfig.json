{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": false,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "esnext",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2020"
    },
    "include": ["src/**/*"],
    "typedocOptions": {
        "entryPoints": ["src/"],
        // For typedoc >= 0.22.x
        //"entryPointStrategy": "Expand",
        "exclude": ["src/tests"],
        "out": ["dist/docs"],
        "theme": "default",
        "categorizeByGroup": false,
        // For typedoc >= 0.22.x
        // "validation": {"invalidLink": true},
        // For typedoc < 0.22.x
        "listInvalidSymbolLinks": true
    }
}
