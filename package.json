{
    "name": "@youwol/flux-builder",
    "version": "0.0.14-next",
    "description": "Front end side of the Flux builder application",
    "author": "greinisch@youwol.com",
    "main": "dist/index.html",
    "scripts": {
        "version": "[ ! -f sonar-project.properties ] || sed -i \"s|^sonar.projectVersion=.*$|sonar.projectVersion=$npm_package_version|\" sonar-project.properties",
        "build": "yarn build:dev",
        "build:dev": "del-cli dist && webpack --mode development",
        "build:prod": "del-cli dist && webpack --mode production",
        "test": "jest -c ./jest.config.js --rootDir . -i",
        "test-coverage": "jest -c ./jest.config.js --rootDir . -i --collect-coverage --collectCoverageFrom=./src/app/**/*.ts ",
        "lint-prettier": "prettier --check src/ --require-pragma true && prettier --check '{./,!(src/*)}' --insert-pragma false",
        "lint-eslint": "eslint . --ignore-path .eslintignore.transition",
        "eslint-fix-rule-ts": "yarn eslint --no-eslintrc --fix --parser '@typescript-eslint/parser' --parser-options '{\"tsconfigRootDir\" : \"./\", \"project\" : [\"tsconfig.json\"]}' --plugin '[\"jest\", \"import\", \"unused-imports\", \"@typescript-eslint\"]' --no-ignore 'src/**/*.ts' --rule",
        "eslint-check-rule-ts": "yarn eslint --no-eslintrc --parser '@typescript-eslint/parser' --parser-options '{\"tsconfigRootDir\" : \"./\", \"project\" : [\"tsconfig.json\"]}' --plugin '[\"jest\", \"import\", \"unused-imports\", \"@typescript-eslint\"]' --no-ignore 'src/**/*.ts' --rule",
        "lint": "yarn lint-prettier && yarn lint-eslint",
        "format": "yarn format-prettier && yarn format-eslint",
        "format-prettier": "prettier --write src/ --require-pragma true && prettier --write '{./,!(src/*)}' --insert-pragma false",
        "format-eslint": "eslint --fix . --ignore-path .eslintignore.transition",
        "doc": "typedoc",
        "start": "webpack serve",
        "upgrade-youwol": "yarn upgrade @youwol/cdn-client @youwol/flux-core @youwol/flux-svg-plots @youwol/flux-view @youwol/fv-button @youwol/fv-context-menu @youwol/fv-group @youwol/fv-input @youwol/fv-tabs @youwol/fv-tree",
        "publish-npm-public": "yarn build:prod && yarn test-coverage && yarn publish --access public"
    },
    "license": "MIT",
    "dependencies": {
        "@youwol/cdn-client": "0.0.12",
        "@youwol/flux-core": "~0.0.24",
        "@youwol/flux-files": "^0.0.5",
        "@youwol/flux-svg-plots": "~0.0.0",
        "@youwol/flux-view": "~0.0.10",
        "@youwol/platform-essentials": "^0.0.4",
        "@youwol/fv-button": "~0.0.4",
        "@youwol/fv-context-menu": "~0.0.0",
        "@youwol/fv-group": "~0.0.6",
        "@youwol/fv-input": "~0.0.5",
        "@youwol/fv-tabs": "~0.0.3",
        "@youwol/fv-tree": "~0.0.4",
        "@youwol/http-clients": "^0.0.3",
        "@youwol/logging": "^0.0.2",
        "d3-dispatch": "2.x",
        "d3-drag": "2.x",
        "d3-scale": "3.x",
        "d3-selection": "2.x",
        "d3-zoom": "2.x",
        "grapesjs": "0.x",
        "lodash": "4.x",
        "reflect-metadata": "0.x",
        "rxjs": "6.x"
    },
    "devDependencies": {
        "@types/codemirror": "^5.60.5",
        "@types/js-beautify": "^1.13.3",
        "@types/jest": "26.0.22",
        "@types/node": "14.14.37",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "codemirror": "^5.63.3",
        "js-beautify": "^1.14.0",
        "css-loader": "5.2.0",
        "del-cli": "3.0.1",
        "eslint": "7.23.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-eslint-comments": "^3.2.0",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-jest": "^25.2.2",
        "eslint-plugin-unused-imports": "^1.1.5",
        "eslint-webpack-plugin": "2.5.3",
        "file-loader": "6.2.0",
        "html-webpack-plugin": "5.2.0",
        "jest": "26.6.3",
        "jest-junit": "12.0.0",
        "jest-sonar": "^0.2.12",
        "mini-css-extract-plugin": "1.3.9",
        "prettier": "^2.4.1",
        "prettier-plugin-properties": "^0.1.0",
        "source-map-loader": "2.0.1",
        "ts-jest": "26.5.4",
        "ts-lib": "0.0.5",
        "ts-loader": "8.1.0",
        "ts-mockito": "^2.6.1",
        "typedoc": "0.20.34",
        "typescript": "4.2.3",
        "webpack": "5.28.0",
        "webpack-bundle-analyzer": "^4.4.0",
        "webpack-cli": "4.6.0",
        "webpack-dev-server": "3.11.2"
    },
    "youwol": {
        "type": "application",
        "pipeline": {
            "name": "yw_pipeline_webpack_ts",
            "version": "0.0.0"
        },
        "cdnDependencies": {
            "@youwol/cdn-client": "0.0.12",
            "@youwol/flux-core": "~0.0.24",
            "@youwol/flux-files": "^0.0.5",
            "@youwol/flux-svg-plots": "~0.0.0",
            "@youwol/flux-view": "~0.0.10",
            "@youwol/platform-essentials": "^0.0.4",
            "@youwol/fv-button": "~0.0.4",
            "@youwol/fv-context-menu": "~0.0.0",
            "@youwol/fv-group": "~0.0.6",
            "@youwol/fv-input": "~0.0.5",
            "@youwol/fv-tabs": "~0.0.3",
            "@youwol/fv-tree": "~0.0.4",
            "@youwol/http-clients": "^0.0.3",
            "@youwol/logging": "^0.0.2",
            "codemirror": "5.x",
            "js-beautify": "1.14.0",
            "grapesjs": "0.x",
            "lodash": "4.x",
            "reflect-metadata": "0.x",
            "rxjs": "6.x"
        }
    },
    "prettier": {
        "printWidth": 80,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "quoteProps": "as-needed",
        "trailingComma": "all",
        "bracketSpacing": true,
        "arrowParens": "always",
        "rangeStart": 0,
        "requirePragma": false,
        "insertPragma": true,
        "proseWrap": "preserve",
        "htmlWhitespaceSensitivity": "css",
        "endOfLine": "lf",
        "embeddedLanguageFormatting": "auto",
        "keySeparator": "="
    },
    "eslintConfig": {
        "root": true,
        "ignorePatterns": [
            "/dist/",
            "/coverage/"
        ],
        "env": {
            "browser": true,
            "es2020": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:eslint-comments/recommended",
            "plugin:import/recommended",
            "prettier"
        ],
        "rules": {
            "eslint-comments/require-description": [
                "error"
            ],
            "eslint-comments/no-unused-disable": [
                "error"
            ],
            "curly": [
                "error"
            ],
            "no-irregular-whitespace": [
                "error",
                {
                    "skipComments": true,
                    "skipTemplates": true
                }
            ]
        },
        "overrides": [
            {
                "files": [
                    "webpack.config.js",
                    "jest.config.js"
                ],
                "env": {
                    "node": true
                }
            },
            {
                "files": [
                    "*.ts"
                ],
                "extends": [
                    "plugin:@typescript-eslint/recommended",
                    "plugin:import/typescript"
                ],
                "parser": "@typescript-eslint/parser",
                "parserOptions": {
                    "tsconfigRootDir": "./",
                    "project": [
                        "./tsconfig.json"
                    ]
                },
                "plugins": [
                    "unused-imports",
                    "@typescript-eslint"
                ],
                "rules": {
                    "@typescript-eslint/no-namespace": "off",
                    "@typescript-eslint/no-unused-vars": "off",
                    "unused-imports/no-unused-imports": "error",
                    "unused-imports/no-unused-vars": [
                        "warn",
                        {
                            "vars": "all",
                            "varsIgnorePattern": "^_",
                            "args": "after-used",
                            "argsIgnorePattern": "^_"
                        }
                    ],
                    "@typescript-eslint/no-unnecessary-type-assertion": "error"
                }
            },
            {
                "files": [
                    "*.test.ts"
                ],
                "extends": [
                    "plugin:jest/recommended",
                    "plugin:jest/style"
                ],
                "plugins": [
                    "jest"
                ],
                "rules": {
                    "jest/expect-expect": [
                        "error",
                        {
                            "assertFunctionNames": [
                                "expect",
                                "verify"
                            ]
                        }
                    ]
                }
            }
        ],
        "noInlineConfig": false,
        "reportUnusedDisableDirectives": true
    }
}
